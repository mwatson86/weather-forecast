{
  "name": "weather-forecast",
  "version": "1.0.0",
  "description": "weather forecast app",
  "main": "package/server",
  "scripts": {
    "dev": "parallelshell 'npm run dev:client' 'npm run dev:server'",
    "dev:client": "webpack-dev-server --config webpack.dev.config.js",
    "dev:server": "NODE_PATH=src nodemon -r dotenv/config -w src/server -w src/shared/ --ext '.js' ./node_modules/.bin/babel-node ./src/server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --config webpack.prod.config.js",
    "build:server": "NODE_PATH=src babel ./src --out-dir ./package --ignore ./src/client --copy-files",
    "start": "NODE_PATH=package node -r dotenv/config ./package/server",
    "test": "NODE_PATH=src BABEL_ENV=test mocha --watch 'test/**/*.test.js' -r babel-core/register -r test/setup.js -r dotenv/config"
  },
  "author": "Miles Watson",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "pug": "^2.0.3",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.8.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "moment": "^2.22.2",
    "nock": "^9.4.2",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.1",
    "parallelshell": "^3.0.2",
    "prop-types": "^15.6.2",
    "pug-loader": "^2.4.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.0.3",
    "sinon": "^6.1.3",
    "style-loader": "^0.21.0",
    "supertest": "^3.1.0",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  }
}
